<%-include('extensions/header.ejs')%>

    <br><br><br><br>

    <form class="container" method="POST" action="/mybooks/update" enctype="multipart/form-data">
        <% if (Emessage) { %>
            <div class="alert alert-danger">
                <%= Emessage %>
            </div>
            <% } %>
                <% if (Smessage) {%>
                    <div class="alert alert-success">
                        <%= (Smessage) %>
                    </div>
                    <% } %> 
                        <div class="mb-3">
                            <label class="form-label">Book Title</label>
                            <input type="text" class="form-control" name="title" value="<%= bookUpdate.title %>" >
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea type="text" class="form-control" name="description" ><%=  bookUpdate.description %></textarea>
                        </div>
                        <input type="hidden" name="bookId" value="<%= bookUpdate._id %>">
                        <div class="mb-3">
                            <label class="form-label">Author</label>
                            <input type="text" class="form-control" name="author" value="<%= bookUpdate.author %>" >
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input type="number" class="form-control" name="price" value="<%= bookUpdate.price %>" >
                        </div>
                        <img src="/uploads/<%=bookUpdate.image%>" width="100" height="100" >
                        <div class="mb-3">
                            <label class="form-label">Image</label>
                            <input type="file" accept=".jpg,.png,.jpeg" class="form-control" name="image" >
                        </div>

                        <button type="submit" class="btn btn-primary">UPDATE</button>
    </form>
    <%-include('extensions/footer.ejs')%>