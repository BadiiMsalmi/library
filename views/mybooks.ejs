<%- include('extensions/header.ejs') %>
  <br><br><br><br>
  <div class="container">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Price</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for (let book of books) {%>
        <tr>
          <th scope="row"><img width="50" height="50" src="/uploads/<%= book.image %>"></th>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td>$<%= book.price %></td>
          <td>
          
            <a href="/mybooks/delete/<%= book._id  %>"><button class="btn btn-danger" type="submit">Delete</button></a>
            <a href="/mybooks/update/<%= book._id  %>"><button class="btn btn-primary" type="submit">Update</button></a>
          
          </td>
        </tr>
        <% }%>
      </tbody>
    </table>
  </div>
  <%- include('extensions/footer.ejs') %>